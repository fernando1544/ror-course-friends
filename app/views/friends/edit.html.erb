<h1>Editing friend</h1>

<%= render "form", friend: @friend %>

<br>

<div class="d-flex flex-row bd-highlight gap-2 mb-3">
  <div class="bd-highlight"><%= link_to "Show this friend", @friend, class:"btn btn-secondary" %></div>
  <div class="bd-highlight"><%= link_to 'Back to friends', friends_path, class:"btn btn-secondary" %></div>
  <div class="bd-highlight ms-auto"><%= button_to 'Delete this friend', @friend, method: :delete, data: { confirm: 'Are you sure?'}, class:"btn btn-danger" %></div>
</div>
