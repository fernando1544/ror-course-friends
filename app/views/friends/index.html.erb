<h1>Friends</h1>

  <table class="table table-striped table-bordered">
    <thead class="thead-dark">
      <tr>
        <th>First name</th>
        <th>Last name</th>
        <th>Email</th>
        <th>Phone</th>
        <th>Twitter</th>
        <th>User ID</th>
      </tr>
    </thead>

    <tbody>
      <div id="friends">
        <% @friends.each do |friend| %>
          <tr>
            <td><%= friend.first_name %></td>
            <td><%= friend.last_name %></td>
            <td><%= friend.email %></td>
            <td><%= friend.phone %></td>
            <td><%= friend.twitter %></td>
            <td><%= friend.user_id %></td>
            <td><%= link_to 'Show', friend, class: "btn btn-outline-secondary btn-sm" %></td>
            <% if friend.user == current_user %>
              <td><%= link_to 'Edit', edit_friend_path(friend), class: "btn btn-outline-secondary btn-sm" %></td>
              <td><%= button_to 'Destroy', friend, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-outline-danger btn-sm" %></td>
            <% end %>
          </tr>
        <% end %>
      </div>
    </tbody>

  <div>
    <br/>
      <%= link_to "New friend", new_friend_path, class:"btn btn-secondary" %>
    <br/>
    <br/> 
  </div>
