<h1>Friends</h1>

<% if user_signed_in? %>

  <table class="table table-striped table-bordered">
    <thead class="thead-dark">
      <tr>
        <th>Name</th>
        <th>Email</th>
        <th>Phone</th>
        <th>Twitter</th>
      </tr>
    </thead>

    <tbody>
      <div id="friends">
        <% @friends.each do |friend| %>
          <tr>
            <td> <%= link_to friend.first_name + ' ' + friend.last_name, friend %></td>
            <td><%= friend.email %></td>
            <td><%= friend.phone %></td>
            <td><%= friend.twitter %></td>
            <% if friend.user == current_user %>
              <td><%= button_to 'Delete', friend, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-outline-danger btn-sm" %></td>
            <% end %>
          </tr>
        <% end %>
      </div>
    </tbody>

  <div>
    <br/>
      <%= link_to "New friend", new_friend_path, class:"btn btn-secondary" %>
    <br/>
    <br/> 
  </div>

<% else %>
  <h1> Hello world!</h1>
  <p> This is my first Ruby app </p>
<% end %>